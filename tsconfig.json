{
    "include": ["source"],
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "lib": ["ESNext"],
        "types": ["node"],

        "strict": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true
    }
}